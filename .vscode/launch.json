    "version": "0.2.0",
    "configurations": [
        {
            "name": "chcheck test/module",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/chcheck.py",
            "console": "integratedTerminal",
            "args": [
                "test/module"
            ]
        },
        {
            "name": "chcheck -I../pycparser test/module",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/chcheck.py",
            "console": "integratedTerminal",
            "args": [
                "-I../pycparser",
                "test/module"
            ]
        },
        {
            "name": "chcheck from another directory",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/chcheck.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/test",
            "args": [
                "module"
            ]
        }
    ]
}